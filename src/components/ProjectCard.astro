---
import { Image } from "astro:assets";
import TechnologyPill from "@components/TechnologyPill.astro";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  technologies: Technology[];
  link: string;
  repo: string;
}

interface Technology {
  name: string;
  svg: string;
  bgColor: string;
}

const { description, link, repo, technologies, title } = Astro.props;
---

<div class="project-container">
  <figure>
    <Image
      class="project-img"
      src="https://animated-churros-60739d.netlify.app/projects/svgl.webp"
      width="340"
      height="220"
      alt="project image"
    />
  </figure>
  <div>
    <h3 class="project-name">{title}</h3>
    <ul class="project-list" role="list">
      {
        technologies.map((tech) => (
          <li>
            <TechnologyPill {...tech} />
          </li>
        ))
      }
    </ul>
    <p class="project-description">{description}</p>
    <div class="project-buttons">
      <a class="button-outline" href="#"><Icon name="github" /> CÃ³digo</a>
      <a class="button-outline" href="#"><Icon name="goto" /> Ver</a>
    </div>
  </div>
</div>

<style>
  .project-container {
    margin-block-end: 4rem;
  }
  figure {
    overflow: hidden;
    width: 100%;
    margin: 0;
    border-radius: 0.75rem;
  }
  .project-img {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    object-position: center;
    transition: transform 300ms ease;
    &:hover {
      transform: scale(1.125);
    }
  }
  .project-name {
    font-size: 1.5rem;
    margin-block-end: 0.5rem;
  }
  .project-list {
    display: flex;
    gap: 0.5rem;
    padding: 0;
  }
  .project-description {
    color: var(--parragraph);
  }
  .project-buttons {
    display: flex;
    gap: 1rem;
    margin-block-start: 1rem;
  }
  @media screen and (min-width: 768px) {
    .project-container {
      display: flex;
      align-items: start;
      column-gap: 2rem;
      margin-block-end: 6rem;
    }
    .project-name {
      margin-block: 0.25rem;
    }
  }
</style>
